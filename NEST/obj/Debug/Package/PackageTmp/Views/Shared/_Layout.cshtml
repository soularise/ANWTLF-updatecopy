<!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <title>@NEST.Common.LandingConfig.Current.SiteTitle - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/theme-rr/css/reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/theme-rr/css/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/theme-rr/css/slider.css")" rel="stylesheet" type="text/css" media="screen" />
    <link href="@Url.Content("~/Scripts/nivo-slider/nivo-slider.css")" rel="stylesheet" type="text/css" media="screen" />
    <link href="@Url.Content("~/Content/theme-rr/css/flexcrollstyles.css")" rel="stylesheet" type="text/css" />

    <script type="text/javascript" src="@Url.Content("~/Scripts/flexcroll.js")">
    <script src="http://platform.twitter.com/anywhere.js?id=@NEST.Common.LandingConfig.Current.TwitterAnywhereAPIKey&v=1" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/theme-default/js/site.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/theme-default/js/contribution.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/nivo-slider/jquery.nivo.slider.pack.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        // misc for slider images
        $(window).load(function () {
            $('#slider').nivoSlider({
                effect: 'fold', // Specify sets like: 'fold,fade,sliceDown'
                animSpeed: 1000, // Slide transition speed
                pauseTime: 5000, // How long each slide will show
                //startSlide: 0, // Set starting Slide (0 index)
                directionNav: true, // Next & Prev navigation
                directionNavHide: true, // Only show on hover
                controlNav: true, // 1,2,3... navigation
                pauseOnHover: false, // Stop animation while hovering
                //captionOpacity: 0.8, // Universal caption opacity
                //randomStart: false, // Start on a random slide
            });
        });
        
        // misc for twitter anywhere
        twttr.anywhere(function (T) {
            T("#follow-placeholder").followButton('@NEST.Common.LandingConfig.Current.TwitterAccount');
        });
    </script>
    @if (!string.IsNullOrWhiteSpace(NEST.Common.LandingConfig.Current.GoogleAnalyticsAccount))
    {
         <script type="text/javascript">
             var _gaq = _gaq || [];
             _gaq.push(['_setAccount', '@NEST.Common.LandingConfig.Current.GoogleAnalyticsAccount']);
             _gaq.push(['_setDomainName', '@NEST.Common.LandingConfig.Current.WebsiteDomainName']);
             _gaq.push(['_setAllowLinker', true]);
             _gaq.push(['_trackPageview']);

             (function () {
                 var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                 ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                 var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
             })();
        </script>       
    }    
    
    <link rel="image_src" href="@NEST.Common.LandingConfig.Current.ICOImage" />
    
</head>
<body>
    <div class="page" dir="ltr">
        <div id="header" class="radius">
            <div id="title">@NEST.Common.LandingConfig.Current.SiteTitle <span id="title2">@NEST.Common.LandingConfig.Current.Tagline</span></div>
            <div id="subtitle"><a href="@Url.Content("~/Contact")">contact</a> - <a href="@Url.Content("~/")">home</a></div>
            @RenderPage("~/views/shared/_TopNavMenu.cshtml")
        </div>

        <div id="main">
            <div class="main-inner">
                <div class="joinourteam radius">
                    <div id="SocialIconGroup">
                        <div  class="social">
                            <div>
                            <a href="@NEST.Common.LandingConfig.Current.FacebookPage" class="facebook-href"><img src="@Url.Content("~/Content/theme-rr/images/social-icons.png")" /></a>
                            <a href="http://www.twitter.com/#!/@NEST.Common.LandingConfig.Current.TwitterAccount" class="twitter-href"><img src="@Url.Content("~/Content/theme-rr/images/social-icons.png")" /></a>
                            <a href="http://www.youtube.com/user/@NEST.Common.LandingConfig.Current.YouTubeAccount/" class="you-tube-href"><img src="@Url.Content("~/Content/theme-rr/images/social-icons.png")" /></a>
                            <a href="http://www.flickr.com/photos/@NEST.Common.LandingConfig.Current.FlickrAccount/" class="href"><img src="@Url.Content("~/Content/theme-rr/images/social-icons.png")" /></a>
                            </div>
                        </div>
                    </div>                   
                    <ul class="joinfields">

                        <li><input id="FirstName" type="text" maxlength="50" value="first name" onfocus="if(this.value == 'first name') { this.value = ''; }" /></li>
                        <li><input id="LastName" type="text" maxlength="50" value="last name" onfocus="if(this.value == 'last name') { this.value = ''; }" /></li>

   
                        <li><input id="Email" type="text" maxlength="50" value="email" onfocus="if(this.value == 'email') { this.value = ''; }" /></li>

                        <li><input id="ZipCode" type="text" maxlength="10" value="zip" onfocus="if(this.value == 'zip') { this.value = ''; }" /></li>

                        <li><input type="submit" value="join mailing list" id="BtnJoin"/></li>    
                    </ul>
                    
                    <script type="text/javascript">
                        $('#BtnJoin').click(function () {
                            var em = $('#Email').val();
                            if (!_UValidEmail(em)) {
                                alert('Enter a valid email address');
                                return false;
                            }
                            var fin = $('#FirstName').val();
                            var lan = $('#LastName').val();
                            var zip = $('#ZipCode').val();
                            $.post('/join', { FirstName: fin, LastName: lan, Email: em, ZipCode: zip });
                            alert('@NEST.Common.LandingConfig.Current.JoinThanksMessage');
                            
                        });
                    </script>
                </div>
                <div class="home-main radius">
                    <div id="imageslider">
                        <div id="wrapper">
                            <div class="slider-wrapper theme-default">
                                <div class="ribbon"></div>
                                <div id="slider" class="nivoSlider">
                                @{
                                    
                                    for (int rotateImage = 1; rotateImage <= 15; rotateImage++)
                                    {
                                        var tmpImageRef = "Pic" + rotateImage + ".jpg";
                                    <img src="@Url.Content("~/UploadedFiles/")@tmpImageRef" alt="" height="280" width="700" />;
  
                                    //if (rotateImage == 20){
                                    //    rotateImage = 2;   
                                    //
                                                                                                                                                                 
                                    }
                                }
                                
                                </div>
                            </div>
	                    </div>
                    </div>
                </div>
            </div>
            <div id="MainContent">
            @RenderBody()
            </div>
        </div>
        <div id="footer">
            <div id="footertext">@NEST.Common.LandingConfig.Current.SiteTitle - PO BOX 5251 Deerfield Beach, FL 33442 - click <a href="@Url.Content("~/contact")">HERE</a> to contact</div>
            <div id="follow-placeholder"></div>

        </div>

    </div>

</body>
</html>
