@model NEST.Models.Registrant
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Contact";
}

<h1>@ViewBag.Title</h1>


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="main-inner">
    <div id="main-content" class="radius">
    <div class="home-intro-container">


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
   <fieldset>
<h2>To contact <span style="color:Red;">@NEST.Common.LandingConfig.Current.SiteTitle</span>, please fill out the form below.</h2>
    <div id="formLeft">
    


        <div class="editor-label">
            First Name <span class="alertmessage">@Html.ValidationMessageFor(model => model.FirstName)</span>
        </div>
        <div class="editor-field">
            
            @Html.EditorFor(model => model.FirstName)
            
        </div>

        <div class="editor-label">
           Last Name <span class="alertmessage">@Html.ValidationMessageFor(model => model.LastName)</span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            
        </div>










        <div class="editor-label">
            Comments
        </div>
        <div class="editor-field">
            <textarea rows="10" cols="60" name="Comments"></textarea>
        </div>
        <p>
            <br />
            <input type="image" value="Join" src="@Url.Content("~/Content/theme-default/images/btn-submit.png")" />

            
        </p>
    </div>
    <div id="formRight">
    


        <div class="editor-label">
            @Html.LabelFor(model => model.Email) <span class="alertmessage">@Html.ValidationMessageFor(model => model.Email)</span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
        </div>


        <div class="editor-label">
           Zip Code <span class="alertmessage">@Html.ValidationMessageFor(model => model.ZipCode)</span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ZipCode)
            
        </div>


   
    </div>
    
    </fieldset>
}
    </div>
</div>
</div>

